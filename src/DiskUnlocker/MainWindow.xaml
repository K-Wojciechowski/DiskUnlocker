<Window x:Class="DiskUnlocker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiskUnlocker"
        mc:Ignorable="d"
        Title="DiskUnlocker" Height="500" Width="800" Loaded="WindowLoaded"
        ThemeMode="System">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="50px" />
      <RowDefinition Height="1*" />
    </Grid.RowDefinitions>
    <Label x:Name="Header" FontSize="20" Content="Looking for eventsâ€¦" VerticalAlignment="Center" Padding="8,0,0,0" Margin="0" Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}" />
    <DataGrid Grid.Row="1" x:Name="EventDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Date/Time" Binding="{Binding TimeGenerated, StringFormat=G, ConverterCulture=en-GB}"/>
        <DataGridTextColumn Header="PID" Binding="{Binding Pid}"/>
        <DataGridTextColumn Header="Process Name" Binding="{Binding ProcessName}" />
        <DataGridTextColumn Header="Device" Binding="{Binding Device}"/>
        <DataGridTemplateColumn Header="Actions">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <Button Click="KillProcess" IsEnabled="{Binding CanBeKilled}">Kill</Button>
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</Window>
